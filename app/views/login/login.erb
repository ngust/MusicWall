
<body>
  <div class="form animated flipInX">
    <div class="login">
      <h2>Login To Your Account</h2>
      <form class="form-login" role="form" method="post" action="/login">
        <input class="black" name="username" placeholder="Username" type="text"></input>
        <input class="black" name="password" placeholder="Password" type="password"></input>
        <button>Login</button>
      </form>
    </div>
    <div class="register">
      <h2>Create An Account</h2>
      <form class="form-signin" role="form" method="post" action="/signup">
        <input class="black" name="username" placeholder="Username" type="text"></input>
        <input class="black" name="password" placeholder="Password" type="password"></input>
        <input class="black" name="password" placeholder="Confirm Password" type="password"></input>
        <input class="black" name="email" placeholder="Email Address" type="email"></input>
        <button>Login</button>
      </form>
    </div>

  </div>
</body>